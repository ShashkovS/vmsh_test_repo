# Запрет на прямой доступ к файлам *.inc, *.rar
<Files "*.inc">
    Order Deny,Allow
    Deny from all
</Files>
<Files  "*.html">
    Order Deny,Allow
    Deny from all
</Files>
<Files "*.rar">
    Order Deny,Allow
    Deny from all
</Files>
# Запрещаем показывать список файлов в директориях, где нет индексного файла
Options -Indexes
# Убеждаемся, что всё настроено по дефолту
php_value magic_quotes_gpc off
php_value register_globals off
# Turn ETags Off

Options +FollowSymLinks
RewriteEngine on



# Перенаправляем со всех возможных начальных страниц по ВМШ на одну и ту же
RewriteCond %{HTTP_HOST} ^shashkovs.ru
RewriteRule (.*) https://www.shashkovs.ru/vmsh-test/$1 [R=301,L]

RewriteCond %{THE_REQUEST} /about/index [NC]
RewriteRule ^.*$ https://www.shashkovs.ru/vmsh-test/about/ [R=301,L]
RewriteCond %{THE_REQUEST} /contact/index [NC]
RewriteRule ^.*$ https://www.shashkovs.ru/vmsh-test/contact/ [R=301,L]
RewriteCond %{THE_REQUEST} /index [NC]
RewriteRule ^.*$ https://www.shashkovs.ru/vmsh-test/ [R=301,L]
RewriteRule ^karusel/(.*)$ karusel/wrt_ans2.php


